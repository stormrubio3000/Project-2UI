@model ANightsTaleUI.Models.Info

@{
    ViewData["Title"] = "CreateInfo";
}

<header>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=IM+Fell+DW+Pica+SC" />

</header>

<style>
body { background-image: url("https://wallpapercave.com/wp/wp2770226.jpg"); background-repeat: no-repeat }

    h2, .back {
        font-family: "IM Fell DW Pica SC";
        color: gold;
        margin-top: 20px
    }

    .control-label {
        font-family: "IM Fell DW Pica SC";
    }


    .row {
        background-color: lightgray;
        border-style: double;
        border-color: goldenrod;
    }

    .form-control {
        font-family: "IM Fell DW Pica SC";
        border-style: double;
        border-color: goldenrod
    }

    .btn-btn-primary {
        background-color: forestgreen;
        font-family: "IM Fell DW Pica SC";
        margin-bottom: 10px
    }
</style>

<h2>Campaign Information</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                @Html.TextArea("Message", "", new { @class = "form-control" })
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
