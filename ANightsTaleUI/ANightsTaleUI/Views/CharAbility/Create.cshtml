@model ANightsTaleUI.Models.ViewModels.AbilityChar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CharAbilities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="charID" type="hidden" value=@Model.charID class="form-control" />
                <span asp-validation-for="charID" class="text-danger"></span>
            </div>
            <label asp-for="abilities" class="control-label"></label>
            <select asp-for="ability.AbilityID"
                    asp-items="@(new SelectList(Model.abilities, "AbilityID", "Name"))" class="form-control"></select>
            <div class="form-group">
                <label asp-for="mod" class="control-label"></label>
                <input asp-for="mod" class="form-control" />
                <span asp-validation-for="mod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
