@model IEnumerable<ANightsTaleUI.Models.Abilities>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumDice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumSides)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumSides)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {  id=item.AbilityID })
            </td>
        </tr>
}
    </tbody>
</table>
