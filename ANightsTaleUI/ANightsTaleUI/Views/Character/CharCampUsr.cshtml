@model ANightsTaleUI.Models.ViewModels.CharactersLists

@{
    ViewData["Title"] = "CharCampUsr";
}

<header>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=IM+Fell+DW+Pica+SC" />

</header>

<style>
body { background-image: url("http://s1.1zoom.me/big0/892/Diablo_III_Crows_Gothic_Fantasy_Night_516398_1280x619.jpg"); background-repeat: repeat }

    h2, h4 {
        font-family: "IM Fell DW Pica SC";
        color: gold;
    }

    .table1,.table2 {
        float: none;
        margin: 0 auto;
        background-color: lightgray;
        border-style: double;
        border-color: goldenrod;
        margin-bottom : 20px
    }

    .data-name, .tag-name {
        font-family: "IM Fell DW Pica SC";
        padding: 10px
    }

    .ability {
        width: 37px;
        padding-right: 12px
    }

    .btn-create {
        background-color: forestgreen;
        font-family: "IM Fell DW Pica SC";
        margin-bottom: 10px;
        color: black;
        width: 100px;
        border: double
    }
</style>

<h2>Characters</h2>
<form method="get">
    <button asp-controller="Character" asp-action="Create" class="btn-create">Create New</button>
</form>
<h4>Characters in Campaign:</h4>
<table class="table1">
    <thead>
        <tr>
            <th class = "tag-name">
                @Html.DisplayNameFor(model => model.campCharacters[0].Name)
