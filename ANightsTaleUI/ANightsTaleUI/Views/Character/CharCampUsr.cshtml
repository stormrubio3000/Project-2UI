                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Str)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Dex)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Con)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Int)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Wis)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Cha)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.Speed)
                </td>
                <td class = "data-name">
                    @Html.DisplayFor(modelItem => item.MaxHP)
                </td>
                <td class = "data-name"> 
                    @Html.ActionLink("Details", "Details", new { id = item.CharacterID })
                </td>
            </tr>
        }
    </tbody>
</table>
