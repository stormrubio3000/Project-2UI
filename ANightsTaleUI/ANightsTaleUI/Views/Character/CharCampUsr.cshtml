                @Html.DisplayNameFor(model => model.campCharacters[0].Dex)
            </th>
            <th class = "tag-name">
                @Html.DisplayNameFor(model => model.campCharacters[0].Con)
            </th>
            <th class = "tag-name">
                @Html.DisplayNameFor(model => model.campCharacters[0].Int)
