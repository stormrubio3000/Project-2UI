            </th>
            <th class = "tag-name">
                @Html.DisplayNameFor(model => model.campCharacters[0].Speed)
            </th>
            <th class = "tag-name">
                @Html.DisplayNameFor(model => model.campCharacters[0].MaxHP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.campCharacters)
