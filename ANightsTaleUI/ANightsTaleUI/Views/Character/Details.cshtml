<div class="row" id="links">
     <dl>
         <dd class="data-name">
             @Html.ActionLink("Inventory", "GetInventory", new { id = Model.Character.CharacterID }, new { @class = "links" })
             @Html.ActionLink("Abilities", "GetAbilities", "CharAbility", new { id = Model.Character.CharacterID }, new { @class = "links" })
             @Html.ActionLink("Feats", "Details", "CharFeats", new { id = Model.Character.CharacterID }, new { @class = "links" })
         </dd>
    </dl>
</div>
