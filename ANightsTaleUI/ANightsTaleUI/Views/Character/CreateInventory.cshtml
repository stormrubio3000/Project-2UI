@model ANightsTaleUI.Models.ViewModels.ItemInv

@{
    ViewData["Title"] = "CreateInventory";
}

<h1>CreateInventory</h1>

<h4>ItemInv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="charID" type="hidden" value=@Model.charID class="form-control" />
                <span asp-validation-for="charID" class="text-danger"></span>
            </div>
            <label asp-for="items" class="control-label"></label>
            <select asp-for="item.ItemID"
                    asp-items="@(new SelectList(Model.items, "ItemID", "Name"))" class="form-control"></select>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
